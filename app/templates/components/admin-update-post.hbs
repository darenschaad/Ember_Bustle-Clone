{{#if updatePostForm}}
<h1>Update {{post.title}}</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="photo">Photo URL</label>
        {{input value=photo id="photo" placeholder=post.photo}}
      </div>

      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=post.title}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=post.author}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date" placeholder=post.date}}
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        {{textarea value=content id="content" placeholder=post.content}}
      </div>

      <div class="form-group">
        <label for="genre">Genre</label>
        {{textarea value=genre id="genre" placeholder=post.genre}}
      </div>

      <button class="btn btn-success"  {{action 'update' post}}>Save</button>
    </form>
  </div>
  {{else}}
  <button class="btn btn-info" {{action 'updatePostForm'}}>Edit Post</button>
{{/if}}
